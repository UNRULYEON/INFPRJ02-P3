            var ctx1 = document.getElementById("barcanvas").getContext("2d");
            window.myBar = new Chart(ctx1,
                {
                    type: 'line',
                    data: {
                        labels: periodes,
                        datasets: [{
                            label: labels[0],
                            backgroundColor: "#21166e ",
                            borderColor: "#21166e ",
                            borderWidth: 3,
                            fill: false,
