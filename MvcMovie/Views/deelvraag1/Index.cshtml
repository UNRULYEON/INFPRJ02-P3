        @Html.DropDownListFor(m => m.Kenmerkenwerknemer, filter.SelectedKenmerkenwerknemer, "Kenmerkenwerknemer", 
            new { id="Kenmerkenwerknemer"}) <br>                                   
       
        @Html.DropDownListFor(m => m.Criteria, filter.SelectedCriteria, "Criteria", 
