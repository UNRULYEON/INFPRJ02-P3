@{
    ViewData["Title"] = "Hoofdvraag";
}

<style>
    .chart-container {
        position: relative;
        margin: auto;
        height: 80vh;
        width: 80vw;
    }
</style>

<h1>Op welke manier wordt de keuze van forenzen tussen de trein en de auto beïnvloed?</h1>

<div id="chart-container">
    <canvas id="chart" width="300" height="400"></canvas>
</div>

<script>
// Gets the reference to the canvas
var ctx = document.getElementById("chart");

var data = {
    labels: ["NS", "File"],
    datasets: [{
        label: 'Gemiddeld minuten vertraging',
        data: [12, 19],
        backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
        ],
        borderColor: [
            'rgba(255,99,132,1)',
            'rgba(54, 162, 235, 1)',
        ],
        borderWidth: 2
    }]
};

var options = {
    // Doesn't maintain the original aspect ratio when resizing
    maintainAspectRatio: false,
    scales: {
        xAxes: [{  
            // Label X-axis     
            scaleLabel: {
                display: false,
                //labelString: ''
            },
            stacked: true
        }],
        yAxes: [{
            ticks: {
                // Y-axis starts at zero
                beginAtZero: true,
                // Maximum of the Y-axis
                //max: 5,
                // Minimum of the Y-axis
                min: 0,
                // How big the increment is
                stepSize: 2
            },
            // Label Y-axis     
            scaleLabel: {
                display: true,
                labelString: 'Tijd (minuten)'
            }
        }]
    },
    // Padding around the chart
    layout: {
        padding: {
            left: 0,
            right: 0,
            top: 0,
            bottom: 0
        }
    }
};

var chart = new Chart(ctx, {
    type: 'bar',
    options: options,
    data: data
});
</script>