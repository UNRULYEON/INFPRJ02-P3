@{
    ViewData["Title"] = "recreatie";
}
<h2>@ViewData["Title"]</h2>

<h1>Beïnvloedt de nabijheid van recreationele voorzieningen de huizenprijzen in de regio Rotterdam? </h1>
<div class="filter-container">
    <h3>Filters</h3>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox1">
        <label class="form-check-label" id="checkbox1" for="checkbox1" value="checkbox1" onclick="checkboxTrigger(0)">Checkbox 1</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox2">
        <label class="form-check-label" id="checkbox2" for="checkbox2" value="checkbox2" onclick="checkboxTrigger(1)">Checkbox 2</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox3">
        <label class="form-check-label" id="checkbox3" for="checkbox3" value="checkbox3" onclick="checkboxTrigger(2)">Checkbox 3</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox4">
        <label class="form-check-label" id="checkbox4" for="checkbox4" value="checkbox4" onclick="checkboxTrigger(3)">Checkbox 4</label>
    </div>
</div>

<canvas id="myChart" width="150" height="75"></canvas>

<script>
    var ctx = document.getElementById("myChart");

    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            datasets: [{
                label: 'Huizenprijs in euro (x 10.000)',
                data: [56, 50, 55, 46],
                backgroundColor: [
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)',
                    'rgba(255, 153, 153, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)',
                    'rgba(255, 153, 153, 1)'
                ],
                borderWidth: 1
            }, {
                label: 'Afstand in km',
                data: [3, 4, 6, 9],
                backgroundColor: [
                    'rgba(0, 0, 0, 0)'
                ],
                borderColor: [
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 3,
                pointBackgroundColor: 'rgba(255, 255, 255, 1)',
                pointBorderColor: 'rgba(255, 206, 86, 1)',
                pointBorderWidth: 2,
                pointRadius: 5,
                pointHoverRadius: 7,
                type: 'line'
            }],
            labels: ['Noord', 'Zuid', 'Oost', 'West']
        },
        options: {
            animation: {
                duration: 1000,
                easing: 'easeInOutCubic'
            },
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    },
                    // Label Y-axis
                    scaleLabel: {
                        display: true,
                        labelString: 'Gemiddelde woningwaarde in euro (x 10.000)'
                    }
                }]
            },

            tooltips: {
                enabled: true,
                titleFontSize: 16,
                bodyFontSize: 14,
                displayColors: false,
                yAlign: 'bottom'
            }
        }
    });
</script>
